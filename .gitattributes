# Default setting: all text files use LF
* text=auto eol=lf

# Ensure Python files are always text and use LF
*.py text eol=lf

# Fix configuration files to also use LF
*.py text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.gitignore text eol=lf
*.editorconfig text eol=lf
*.gitattributes text eol=lf

# Do not touch binary files (images, exe, etc.)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.exe binary
*.zip binary
*.tar binary
*.gz binary
*.woff binary
*.woff2 binary
